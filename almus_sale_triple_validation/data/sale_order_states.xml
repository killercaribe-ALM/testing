<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Secuencia para los estados de validación -->
        <!-- Los estados se agregan dinámicamente al selection field mediante selection_add -->
        <!-- Este archivo está principalmente para futuras necesidades de datos -->
        
        <!-- Actividad por defecto para validaciones pendientes -->
        <record id="mail_activity_type_validation_pending" model="mail.activity.type">
            <field name="name">Validación Pendiente</field>
            <field name="summary">Validación</field>
            <field name="category">default</field>
            <field name="delay_count">1</field>
            <field name="delay_unit">days</field>
            <field name="icon">fa-check-square-o</field>
            <field name="res_model">sale.order</field>
        </record>
    </data>
</odoo>
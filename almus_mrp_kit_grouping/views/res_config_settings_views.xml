<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_almus_mrp_kit_grouping_res_config_settings" model="ir.ui.view">
        <field name="name">almus.mrp.kit.grouping.res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="almus_base.view_almus_base_res_config_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='almus_app_settings']" position="inside">
                <setting id="almus_mrp_kit_grouping_settings" 
                         string="Agrupación de Kits en Fabricación"
                         help="Configura cómo se muestran los ingredientes agrupados por kit en las órdenes de fabricación">
                    <div class="content-group">
                        <div class="row mt16">
                            <label for="almus_mrp_kit_grouping_enabled" class="col-lg-3 o_light_label"/>
                            <field name="almus_mrp_kit_grouping_enabled"/>
                        </div>
                        <div class="row">
                            <label for="almus_mrp_kit_show_indent" class="col-lg-3 o_light_label"/>
                            <field name="almus_mrp_kit_show_indent"/>
                        </div>
                        <div class="row">
                            <label for="almus_mrp_kit_collapse_by_default" class="col-lg-3 o_light_label"/>
                            <field name="almus_mrp_kit_collapse_by_default"/>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="alert alert-info" role="alert">
                                    <i class="fa fa-info-circle"/> Esta funcionalidad agrupa visualmente los ingredientes según el kit al que pertenecen, 
                                    facilitando la interpretación de órdenes de fabricación con recetas multinivel.
                                </div>
                            </div>
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
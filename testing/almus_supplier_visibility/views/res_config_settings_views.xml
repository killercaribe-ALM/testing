<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_almus_supplier_visibility_res_config_settings" model="ir.ui.view">
        <field name="name">almus.supplier_visibility.res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="almus_base.view_almus_base_res_config_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='almus_app_settings']" position="inside">
                <setting id="almus_supplier_visibility_settings" 
                         string="Visibilidad de Proveedores"
                         help="Controla qué usuarios pueden ver información de proveedores">
                    <div class="content-group">
                        <div class="row mt16">
                            <div class="col-12">
                                <h4>Estado Actual</h4>
                                <div class="text-muted mb-2">
                                    Los proveedores solo son visibles para usuarios del departamento de compras
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mt16">
                            <div class="col-md-6">
                                <div class="o_setting_box">
                                    <div class="o_setting_box_title">
                                        <strong>Estadísticas</strong>
                                    </div>
                                    <div class="text-muted mt-2">
                                        <span>Total de Proveedores: </span>
                                        <field name="almus_supplier_count" class="oe_inline fw-bold"/>
                                    </div>
                                    <div class="text-muted" invisible="almus_hidden_supplier_count == 0">
                                        <span>Proveedores Ocultos para Ti: </span>
                                        <field name="almus_hidden_supplier_count" class="oe_inline fw-bold text-danger"/>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="o_setting_box">
                                    <div class="o_setting_box_title">
                                        <strong>Control de Acceso</strong>
                                    </div>
                                    <div class="mt-2">
                                        <button name="action_view_supplier_group_users" 
                                                type="object" 
                                                string="Ver Usuarios con Acceso" 
                                                class="btn-link"
                                                icon="fa-users"/>
                                    </div>
                                    <div class="text-muted mt-1">
                                        <small>
                                            Los usuarios de compras tienen acceso automático.
                                            Para dar acceso a otros usuarios, agrégalos al grupo "Ver Proveedores".
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row mt16">
                            <div class="col-12">
                                <div class="alert alert-info" role="alert">
                                    <i class="fa fa-info-circle"/> 
                                    <strong>Nota:</strong> Las reglas de visibilidad se aplican automáticamente. 
                                    Los documentos de compra siguen funcionando normalmente para usuarios autorizados.
                                </div>
                            </div>
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
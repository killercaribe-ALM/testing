<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_almus_product_packaging_res_config_settings" model="ir.ui.view">
        <field name="name">almus.product.packaging.res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="almus_base.view_almus_base_res_config_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='almus_app_settings']" position="inside">
                <setting id="almus_product_packaging_settings" 
                         string="Visualización de Empaques en Catálogo"
                         help="Configura cómo se muestra la información de cantidad por empaque en el catálogo de productos">
                    <div class="content-group">
                        <div class="row">
                            <div class="col-12 col-lg-6">
                                <div class="o_setting_left_pane">
                                    <field name="almus_show_packaging_qty"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="almus_show_packaging_qty"/>
                                    <div class="text-muted">
                                        Activa la visualización de cantidad por empaque en el catálogo de ventas
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mt-3" attrs="{'invisible': [('almus_show_packaging_qty', '=', False)]}">
                            <div class="col-12 col-lg-6">
                                <div class="o_setting_left_pane">
                                    <field name="almus_packaging_display_format" widget="radio"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="almus_packaging_display_format"/>
                                    <div class="text-muted">
                                        Define el formato de visualización para la información de empaque
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Información adicional -->
                        <div class="alert alert-info mt-3" role="alert">
                            <i class="fa fa-info-circle"/> 
                            La información de empaque se muestra automáticamente cuando un producto tiene empaques configurados para ventas.
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
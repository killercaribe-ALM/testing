<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de búsqueda personalizada para el catálogo -->
    <record id="product_catalog_search_view" model="ir.ui.view">
        <field name="name">almus.product.catalog.search</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <search string="Catálogo de Productos">
                <field name="name" string="Producto" 
                       filter_domain="['|', '|', ('name', 'ilike', self), ('default_code', 'ilike', self), ('barcode', 'ilike', self)]"/>
                <field name="categ_id" string="Categoría"/>
                <field name="default_code" string="Referencia"/>
                <separator/>
                <filter string="Puede ser Vendido" name="filter_to_sell" domain="[('sale_ok', '=', True)]"/>
                <filter string="Con Empaques" name="filter_with_packaging" domain="[('packaging_ids', '!=', False)]"/>
                <separator/>
                <group expand="0" string="Agrupar por">
                    <filter string="Categoría" name="group_by_category" context="{'group_by': 'categ_id'}"/>
                    <filter string="Tipo de Producto" name="group_by_type" context="{'group_by': 'type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Vista Kanban para el catálogo de productos (sin campos computados) -->
    <record id="product_packaging_kanban_view" model="ir.ui.view">
        <field name="name">almus.product.packaging.kanban</field>
        <field name="model">product.template</field>
        <field name="priority">16</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_product_catalog" sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="list_price"/>
                <field name="currency_id"/>
                <field name="image_128"/>
                <field name="default_code"/>
                <field name="type"/>
                <field name="packaging_ids"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image me-3">
                                <img t-att-src="kanban_image('product.template', 'image_128', record.id.raw_value)" 
                                     alt="Product" 
                                     class="o_image_64_contain"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div t-if="record.default_code.value" class="text-muted small">
                                    [<field name="default_code"/>]
                                </div>
                                <!-- Mostrar información de empaque usando método directo -->
                                <t t-if="record.packaging_ids.raw_value.length > 0">
                                    <t t-set="packaging_info" t-value="record.get_packaging_display_info()"/>
                                    <div t-if="packaging_info" class="text-primary small">
                                        <i class="fa fa-cube"/> <t t-esc="packaging_info"/>
                                    </div>
                                </t>
                                <div class="o_kanban_record_subtitle mt-1">
                                    <field name="list_price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Vista Lista del Catálogo de Productos -->
    <record id="view_almus_product_template_tree" model="ir.ui.view">
        <field name="name">almus.product.template.tree</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <!-- Agregar columna de cantidad por empaque después del precio -->
            <xpath expr="//field[@name='list_price']" position="after">
                <!-- Campo función que obtiene la info sin computar -->
                <field name="packaging_ids" invisible="1"/>
                <button name="get_packaging_display_info" 
                        string="Ver Empaque"
                        type="object"
                        class="btn-link"
                        optional="show"/>
            </xpath>
        </field>
    </record>
    
    <!-- Vista Formulario del Producto (para referencia) -->
    <record id="view_almus_product_template_form" model="ir.ui.view">
        <field name="name">almus.product.template.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <!-- Agregar información de empaque en la pestaña de ventas -->
            <xpath expr="//page[@name='sales']" position="inside">
                <group name="almus_packaging_info" string="Información de Empaque en Catálogo" invisible="not packaging_ids">
                    <div class="alert alert-info" role="alert">
                        <i class="fa fa-info-circle"/> 
                        <strong>Vista en Catálogo:</strong> Este producto mostrará información de empaque basada en la configuración de Almus.
                        <br/><small class="text-muted">
                            Se utiliza el empaque con menor cantidad marcado para ventas.
                        </small>
                    </div>
                </group>
            </xpath>
        </field>
    </record>
    
    <!-- Acción mejorada para abrir el catálogo de productos -->
    <record id="action_product_catalog_sale_order" model="ir.actions.act_window">
        <field name="name">Catálogo de Productos</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="product_catalog_search_view"/>
        <field name="domain">[('sale_ok', '=', True)]</field>
        <field name="context">{
            'search_default_filter_to_sell': 1,
            'create': False,
            'edit': False,
            'delete': False
        }</field>
        <field name="target">new</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No se encontraron productos para venta
            </p>
            <p>
                Verifique que los productos estén marcados como "Puede ser vendido" y tengan empaques configurados.
            </p>
        </field>
    </record>
</odoo>
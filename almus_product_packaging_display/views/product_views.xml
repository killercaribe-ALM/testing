<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ========================================================= -->
    <!-- SEARCH VIEW utilizada por la acción del catálogo (DEBE ir antes) -->
    <!-- ========================================================= -->
    <record id="product_catalog_search_view" model="ir.ui.view">
        <field name="name">product.catalog.search.view</field>
        <field name="model">product.product</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="default_code"/>
                <filter string="Vendibles" name="filter_to_sell" domain="[('sale_ok','=',True)]"/>
            </search>
        </field>
    </record>

    <!-- ========================================================= -->
    <!-- Vista Kanban Simple para Productos con Empaque            -->
    <!-- ========================================================= -->
    <record id="product_packaging_kanban_view" model="ir.ui.view">
        <field name="name">almus.product.packaging.kanban</field>
        <field name="model">product.product</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_product_catalog">
                <field name="id"/>
                <field name="name"/>
                <field name="lst_price"/>
                <field name="packaging_qty_display"/>
                <field name="currency_id"/>
                <field name="image_128"/>
                <field name="default_code"/>
                <field name="type"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image me-3">
                                <img t-att-src="kanban_image('product.product', 'image_128', record.id.raw_value)"
                                     alt="Product"
                                     class="o_image_64_contain"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div t-if="record.default_code.value" class="text-muted small">
                                    [<field name="default_code"/>]
                                </div>
                                <div t-if="record.packaging_qty_display.raw_value" class="text-primary small">
                                    <i class="fa fa-cube"/> <field name="packaging_qty_display"/>
                                </div>
                                <div class="o_kanban_record_subtitle mt-1">
                                    <field name="lst_price" widget="monetary"
                                           options="{'currency_field': 'currency_id'}"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ========================================================= -->
    <!-- Vista Kanban para el catálogo en órdenes de venta         -->
    <!-- ========================================================= -->
    <record id="view_almus_sale_order_line_product_kanban" model="ir.ui.view">
        <field name="name">almus.sale.order.line.product.kanban</field>
        <field name="model">product.product</field>
        <field name="mode">primary</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="lst_price"/>
                <field name="packaging_qty_display"/>
                <field name="currency_id"/>
                <field name="product_tmpl_id"/>
                <field name="image_128"/>
                <field name="default_code"/>
                <field name="type"/>
                <field name="activity_state"/>
                <progressbar field="activity_state"
                             colors='{"planned": "success", "today": "warning", "overdue": "danger"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('product.product', 'image_128', record.id.raw_value)"
                                     alt="Product"
                                     class="o_image_64_contain"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div t-if="record.default_code.value" class="text-muted">
                                    [<field name="default_code"/>]
                                </div>
                                <div t-if="record.packaging_qty_display.raw_value" class="text-muted">
                                    <i class="fa fa-cube me-1"/>
                                    <span t-esc="record.packaging_qty_display.value"/>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <field name="lst_price" widget="monetary"
                                           options="{'currency_field': 'currency_id'}"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ========================================================= -->
    <!-- Vista Lista del Catálogo de Productos                     -->
    <!-- ========================================================= -->
    <record id="view_almus_product_product_tree" model="ir.ui.view">
        <field name="name">almus.product.product.tree</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lst_price']" position="after">
                <field name="packaging_qty_display"
                       string="Cant. por Empaque"
                       optional="show"/>
            </xpath>
        </field>
    </record>

    <!-- ========================================================= -->
    <!-- Vista Formulario del Producto                             -->
    <!-- ========================================================= -->
    <record id="view_almus_product_product_form" model="ir.ui.view">
        <field name="name">almus.product.product.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales']//group[@name='sale']" position="inside">
                <field name="packaging_qty_display"
                       string="Visualización en Catálogo"
                       readonly="1"
                       help="Así se mostrará la cantidad por empaque en el catálogo de ventas"/>
            </xpath>
        </field>
    </record>

    <!-- ========================================================= -->
    <!-- Acción para abrir el catálogo de productos (usa la search)-->
    <!-- ========================================================= -->
    <record id="action_product_catalog_sale_order" model="ir.actions.act_window">
        <field name="name">Catálogo de Productos</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="product_catalog_search_view"/>
        <field name="domain">[('sale_ok', '=', True)]</field>
        <field name="context">{
            'search_default_filter_to_sell': 1,
            'create': False,
            'edit': False,
            'delete': False
        }</field>
        <field name="target">new</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No se encontraron productos
            </p>
            <p>
                Verifique que los productos estén marcados como "Puede ser vendido"
            </p>
        </field>
    </record>

</odoo>
